{
  "name": "noahslist-api",
  "scripts": {
    "start": "ts-node src/index.ts",
    "db": "docker-compose --file=database/docker-compose.yml up -d",
    "dev": "npm-run-all --parallel start playground",
    "playground": "graphql playground",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "prettier:format": "prettier --write",
    "prettier:lint": "prettier --list-different",
    "tslint:format": "tslint --fix --project .",
    "tslint:lint": "tslint --format verbose --project .",
    "format": "yarn run prettier:format src/**/*.ts *.json *.md *.js && yarn run tslint:format",
    "lint": "yarn run prettier:lint src/**/*.ts *.json *.md *.js && yarn run tslint:lint",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "cheerio": "^1.0.0-rc.2",
    "graphql-import": "0.6.0",
    "graphql-yoga": "1.14.12",
    "lodash": "^4.17.10",
    "moment": "^2.22.2",
    "moment-timezone": "^0.5.21",
    "node-fetch": "^2.2.0",
    "prisma-binding": "2.1.1"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.8",
    "@types/lodash": "^4.14.113",
    "@types/moment-timezone": "^0.5.6",
    "fs-extra": "^7.0.0",
    "graphql-cli": "2.16.4",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "npm-run-all": "4.1.3",
    "prettier": "^1.13.7",
    "prisma": "1.12.0",
    "ts-node": "6.2.0",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.9.2",
    "tslint-config-prettier": "^1.14.0",
    "typescript": "2.9.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn run prettier:format --",
      "yarn run tslint:format --",
      "yarn run prettier:lint --",
      "git add"
    ],
    "*.{js,json,css,md}": [
      "yarn run prettier:format --",
      "yarn run prettier:lint --",
      "git add"
    ]
  }
}
