{
  "name": "comedyshows-nyc",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Noah Pryor <noah@noahpryor.com>",
  "private": true,
  "scripts": {
    "precommit": "lint-staged",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "prettier:format": "prettier --write",
    "prettier:lint": "prettier --list-different",
    "tslint:format": "tslint --fix --project .",
    "tslint:lint": "tslint --format verbose --project .",
    "dev": "concurrently \"yarn --cwd client dev\" \"yarn --cwd server dev\""
  },
  "workspaces": [
    "client",
    "server"
  ],
  "lint-staged": {
    "*.{ts,tsx}!server/src/generated/*.ts": [
      "prettier --parser typescript --write",
      "tslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "concurrently": "^3.6.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.7",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "tslint-config-standard": "^7.1.0",
    "typescript": "^2.9.2",
    "wait-port": "^0.2.2"
  }
}
